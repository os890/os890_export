<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
       http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <import resource="classpath*:META-INF/at/gp/web/jsf/extval/validation/model/transaction/transactional-model-validation-context.xml"/>
    
    <bean id="personPage" class="at.gp.web.jsf.extval.PersonPage" scope="request">
        <property name="person" ref="person"/>
        <property name="role" ref="currentUserRole"/>
    </bean>

    <bean id="person" class="at.gp.web.jsf.extval.domain.Person" scope="session"/>
    <bean id="currentUserRole" class="at.gp.web.jsf.extval.Role" scope="session"/>

    <bean class="at.gp.web.jsf.extval.validation.model.transaction.ExtValBeanPostProcessor">
        <property name="markerClassName" value="javax.persistence.Entity"/>
    </bean>
</beans>